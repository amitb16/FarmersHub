<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F5F5"
    tools:context=".Schemes"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maharashtra Agriculture Schemes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- 1. Soil Health Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Soil Health, Conservation and Fertilizers"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Assistance for soil testing, organic farming, vermi-compost units, and micronutrient supply"
                    android:textColor="#555555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Benefits: Up to Rs. 10,000 per hectare for organic farming and Rs. 30,000 for vermi-compost units"
                    android:textStyle="italic"
                    android:textColor="#555555"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2. Seeds Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Seed Assistance"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Subsidies for certified seeds of various crops, seed production, and storage facilities"
                    android:textColor="#555555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Benefits: 50% subsidy on seeds, up to Rs. 3,000 for storage facilities"
                    android:textStyle="italic"
                    android:textColor="#555555"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 3. Irrigation Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Irrigation Support"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00897B"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Financial assistance for wells, tube wells, lift irrigation systems, pipelines, and pump sets"
                    android:textColor="#555555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Benefits: Up to Rs. 60,000 for digging ponds/wells and Rs. 25,000 for tube wells"
                    android:textStyle="italic"
                    android:textColor="#555555"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 4. Training and Extension Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Training and Extension"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF6F00"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Programs for farmer education, training on various aspects of agriculture, and study tours"
                    android:textColor="#555555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Benefits: Financial support for training programs and demonstrations"
                    android:textStyle="italic"
                    android:textColor="#555555"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 5. Machinery and Technology Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Machinery and Technology"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#5D4037"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Subsidies for tractors, power tillers, farm implements, and processing units"
                    android:textColor="#555555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Benefits: Subsidies up to 50% of cost on various farm equipment"
                    android:textStyle="italic"
                    android:textColor="#555555"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 6. Agricultural Credit Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Agricultural Credit"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#7B1FA2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Interest rebates on timely repayment, Kisan Credit Card scheme, and investment loans"
                    android:textColor="#555555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Benefits: 3% interest rebate on crop loans up to Rs. 3 lakh"
                    android:textStyle="italic"
                    android:textColor="#555555"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 7. Agricultural Marketing Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. Agricultural Marketing"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#C2185B"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Infrastructure for agricultural marketing, storage facilities, and promotional activities"
                    android:textColor="#555555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Benefits: Subsidy up to 33.33% for storage facilities"
                    android:textStyle="italic"
                    android:textColor="#555555"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contact Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="For More Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Contact your nearest Agriculture Office or call Kisan Call Center"
                    android:textColor="#555555"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Toll-Free: 1800-180-1551"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>

                <TextView
                    android:id="@+id/link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Website: www.mahaagri.gov.in"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>